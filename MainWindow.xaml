        <Button Content="*" HorizontalAlignment="Left" Margin="95,90,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>

        <Button Content="0" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="," HorizontalAlignment="Left" Margin="35,125,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="60,125,0,0" VerticalAlignment="Top" Width="30" FontFamily="Century Gothic" Height="20"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="95,125,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="105" FontFamily="Century Gothic" Height="20" Background="#FFAED07C"/>





    </Grid>
