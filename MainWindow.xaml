        <Button Content="3" HorizontalAlignment="Left" Margin="60,40,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="95,40,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>

        <Button Content="4" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="35,65,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="60,65,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="95,65,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>

        <Button Content="7" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="20" FontFamily="Century Gothic" Height="20"/>
